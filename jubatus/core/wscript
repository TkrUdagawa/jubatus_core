# -*- python -*-
from waflib import Options

subdirs = "common anomaly bandit burst classifier contextual_bandit driver framework fv_converter graph recommender regression stat storage nearest_neighbor clustering unlearner third_party"

def options(opt):
  opt.recurse(subdirs)

def configure(conf):
  conf.recurse(subdirs)

def build(bld):
  bld.recurse(subdirs)
  bld.install_files('${PREFIX}/include/jubatus/core',
                    ['plugin.hpp'])
